<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/monitor_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_monitor"
    android:orientation="vertical" >

    <!-- 监控部分的显示控件 -->

    <LinearLayout
        android:id="@+id/monitor_smog_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/monitor_smog_info_layout"
            android:layout_width="427dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:orientation="vertical"
            android:paddingEnd="60dp"
            android:paddingStart="220dp" >

            <TextView
                android:id="@+id/monitor_smog_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_monitor_smog"
                android:textColor="@color/monitor_tv"
                android:textSize="28sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_monitor_level"
                    android:textColor="@color/monitor_tv_result"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/monitor_smog_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="较低"
                    android:textColor="@color/monitor_tv_result"
                    android:textSize="20sp" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/monitor_smog_ratingBar"
                style="@style/star_rating_bar_style"
                android:layout_width="wrap_content"
                android:layout_height="18dip"
                android:isIndicator="true"
                android:numStars="4"
                android:rating="3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/monitor_smog_bar"
            android:layout_width="704dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/monitor_smog_bar_image"
                android:layout_width="680dp"
                android:layout_height="53dp"
                android:background="@drawable/monitor_bar" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/monitor_pm2.5_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/monitor_pm2.5_info_layout"
            android:layout_width="427dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:orientation="vertical"
            android:paddingEnd="0dp"
            android:paddingStart="220dp" >

            <TextView
                android:id="@+id/monitor_pm2.5_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_monitor_pm2.5"
                android:textColor="@color/monitor_tv"
                android:textSize="28sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_monitor_level"
                    android:textColor="@color/monitor_tv_result"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/monitor_pm2.5_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stat_low"
                    android:textColor="@color/monitor_tv_result"
                    android:textSize="20sp" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/monitor_pm2.5_ratingBar"
                style="@style/star_rating_bar_style"
                android:layout_width="wrap_content"
                android:layout_height="18dip"
                android:isIndicator="true"
                android:numStars="4"
                android:rating="4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/monitor_pm2.5_bar"
            android:layout_width="704dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/monitor_pm2.5_bar_image"
                android:layout_width="680dp"
                android:layout_height="53dp"
                android:background="@drawable/monitor_bar" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/monitor_aldehyde_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/monitor_aldehyde_info_layout"
            android:layout_width="427dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:orientation="vertical"
            android:paddingEnd="0dp"
            android:paddingStart="220dp" >

            <TextView
                android:id="@+id/monitor_aldehyde_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_monitor_aldehyde"
                android:textColor="@color/monitor_tv"
                android:textSize="28sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_monitor_level"
                    android:textColor="@color/monitor_tv_result"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/monitor_aldehyde_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stat_low"
                    android:textColor="@color/monitor_tv_result"
                    android:textSize="20sp" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/monitor_aldehyde_ratingBar"
                style="@style/star_rating_bar_style"
                android:layout_width="wrap_content"
                android:layout_height="18dip"
                android:isIndicator="true"
                android:numStars="4"
                android:rating="2" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/monitor_aldehyde_bar"
            android:layout_width="704dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/monitor_aldehyde_bar_image"
                android:layout_width="680dp"
                android:layout_height="53dp"
                android:background="@drawable/monitor_bar" />
        </LinearLayout>
    </LinearLayout>
    <!-- 控制的控件 -->

    <RelativeLayout
        android:id="@+id/control_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

       <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="750dp"
            android:layout_height="134dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_control"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/control_lamp_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginStart="40dp"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/control_lamp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/checkbox"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/control_lamp_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/control_lamp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/str_control_lamp"
                    android:textColor="@color/control_tv"
                    android:textSize="25sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/control_ultraviolet_layout"
				android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginStart="100dp"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/control_ultraviolet"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/checkbox"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/control_ultraviolet_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/control_ultraviolet"
                    android:layout_centerHorizontal="true"
                    android:text="@string/str_control_ultraviolet"
                    android:textColor="@color/control_tv"
                    android:textSize="25sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/control_plasma_layout"
				android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginStart="100dp"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/control_plasma"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/checkbox"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/control_plasma_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/control_plasma"
                    android:layout_centerHorizontal="true"
                    android:text="@string/str_control_plasma"
                    android:textColor="@color/control_tv"
                    android:textSize="25sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/control_ventilator_layout"
				android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="100dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/control_ventilator"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/checkbox"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/control_ventilator_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/control_ventilator"
                    android:layout_centerHorizontal="true"
                    android:text="@string/str_control_ventilator"
                    android:textColor="@color/control_tv"
                    android:textSize="25sp" />
            </RelativeLayout>


        </LinearLayout>

        <!-- 档位控制 -->

        <RelativeLayout
            android:id="@+id/control_ventilator_gears_btns"
            android:layout_width="266dp"
            android:layout_height="77dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="22dp"
            android:layout_toEndOf="@+id/linearLayout1"
            android:background="@drawable/ventilator_gears_btn_bg"
            android:layout_marginStart="5dp"
            android:visibility="invisible">

            <Button
                android:id="@+id/control_ventilator_gears_btn_1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/ventilator_gears_btn_1" 
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"/>

            <Button
                android:id="@+id/control_ventilator_gears_btn_2"
                android:layout_width="55dp"
                android:layout_height="55dp"
               	android:background="@drawable/ventilator_gears_btn_2"
                android:layout_toEndOf="@+id/control_ventilator_gears_btn_1"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="35dp"/>

            <Button
                android:id="@+id/control_ventilator_gears_btn_3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/ventilator_gears_btn_3"
                android:layout_toEndOf="@+id/control_ventilator_gears_btn_2"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="35dp"/>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"
        android:orientation="horizontal" />

</LinearLayout>