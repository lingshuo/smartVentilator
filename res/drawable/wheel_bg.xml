<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >

            <stroke
                android:width="1dp"
                android:color="#ffD0E7F9" />   <!--  中间一竖颜色 -->
        </shape>
    </item>
    
    <item
        android:bottom="1dp"
        android:left="4dp"
        android:right="4dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#FFF"
                android:endColor="#C7E5FC"
                android:startColor="#C7E5FC" />
        </shape>
    </item>

</layer-list>